{
    "compilerOptions": {
      "lib": ["es2019"],
      "removeComments": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "target": "ES2017",
      "outDir": "lib",
      "skipLibCheck": true
    },
    "include": ["src", "integration"]
  }