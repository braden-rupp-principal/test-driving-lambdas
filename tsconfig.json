{
    "compilerOptions": {
      "lib": ["es2019"],
      "removeComments": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "target": "es5",
      "outDir": "lib",
      "skipLibCheck": true
    },
    "include": ["src/**/*", "integration/**/*"]
  }